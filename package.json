{
  "name": "goose-uml-vscode",
  "displayName": "Goose UML",
  "description": "Generate UML class and sequence diagrams for TypeScript, JavaScript, Java, and Python",
  "version": "1.0.0",
  "publisher": "kuochunchang",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization"
  ],
  "keywords": [
    "uml",
    "class-diagram",
    "sequence-diagram",
    "typescript",
    "javascript",
    "java",
    "python"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:java",
    "onLanguage:python"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gooseUML.openPanel",
        "title": "Open UML Panel",
        "category": "Goose UML",
        "icon": "$(type-hierarchy)"
      },
      {
        "command": "gooseUML.generateClassDiagram",
        "title": "Generate Class Diagram",
        "category": "Goose UML"
      },
      {
        "command": "gooseUML.generateSequenceDiagram",
        "title": "Generate Sequence Diagram",
        "category": "Goose UML"
      }
    ],
    "keybindings": [
      {
        "command": "gooseUML.openPanel",
        "key": "ctrl+shift+u",
        "mac": "cmd+shift+u",
        "when": "editorLangId == typescript || editorLangId == javascript || editorLangId == typescriptreact || editorLangId == javascriptreact || editorLangId == java || editorLangId == python"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId == typescript || editorLangId == javascript || editorLangId == typescriptreact || editorLangId == javascriptreact || editorLangId == java || editorLangId == python",
          "command": "gooseUML.openPanel",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "editorLangId == typescript || editorLangId == javascript || editorLangId == typescriptreact || editorLangId == javascriptreact || editorLangId == java || editorLangId == python",
          "command": "gooseUML.openPanel",
          "group": "gooseUML@0"
        },
        {
          "when": "editorLangId == typescript || editorLangId == javascript || editorLangId == typescriptreact || editorLangId == javascriptreact || editorLangId == java || editorLangId == python",
          "command": "gooseUML.generateClassDiagram",
          "group": "gooseUML@1"
        },
        {
          "when": "editorLangId == typescript || editorLangId == javascript || editorLangId == typescriptreact || editorLangId == javascriptreact || editorLangId == java || editorLangId == python",
          "command": "gooseUML.generateSequenceDiagram",
          "group": "gooseUML@2"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "package": "vsce package",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@code-review-goose/analysis-types": "file:../../code-review-goose/packages/analysis-types",
    "tree-sitter": "^0.21.0",
    "tree-sitter-java": "^0.21.0",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-typescript": "^0.21.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.48.0",
    "vitest": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kuochunchang/goose-uml-vscode.git"
  },
  "license": "MIT"
}
